# Configuração de proteção geográfica incluída nos sites-enabled

upstream llama_backend {
    least_conn;
    server 127.0.0.1:8090 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8091 max_fails=3 fail_timeout=30s;
    keepalive 32;
}
server {
    listen 8080;
    server_name _;
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 300s;
    
    # Logging personalizado para proteção geográfica
    access_log /var/log/nginx/geo_protection.log geo_protection_log;
    
    # Bloquear acesso de países não autorizados
    if ($block_access = "blocked") {
        return 403;
    }
    
    # Rate limiting removido para evitar conflitos

    proxy_buffer_size 128k;
    proxy_buffers 4 256k;
    proxy_busy_buffers_size 256k;

    location / {
        proxy_pass http://llama_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Connection "";
        proxy_http_version 1.1;

        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS";
        add_header Access-Control-Allow-Headers "Authorization, Content-Type";
        if ($request_method = 'OPTIONS') { return 204; }
    }
    location /health {
        access_log off;
        return 200 "ET Ultimate OK\n";
        add_header Content-Type text/plain;
    }
}
