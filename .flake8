[flake8]
max-line-length = 88
max-complexity = 10
select = E,W,F,C
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator
exclude = 
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811